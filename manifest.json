{
  "manifest_version": 3,
  "name": "ChatterKeep",
  "author": "Eun",
  "version": "2.0",
  "description": "An extension that allows you to save conversation and upload files.",
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": [
        "./scripts/pdf.min.js",
        "./scripts/popup.js",
        "./scripts/promptDatas.js",
        "./scripts/prompts.js", 
        "./scripts/simhei-normal.js", 
        "./scripts/jspdf.umd.min.js", 
        "./scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "./image/icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
